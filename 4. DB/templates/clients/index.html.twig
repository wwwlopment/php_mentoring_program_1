{% extends 'base.html.twig' %}

{% block title %} Our Clients {% endblock %}

{% block body %}
    <div class="container-xl">
        <div class="table-responsive">
            <div class="table-wrapper">
                <div class="table-title">
                    <div class="row">
                        <div class="col-sm-4">
                            <h2>Manage <b>Clients</b></h2>
                        </div>
                        <div class="col-sm-4">
                            <form class="form-inline my-2 my-lg-0" action="{{ path('clients_search') }}" method="get">
                                <input class="form-control mr-sm-2" type="search" aria-label="Search" name="q">
                                <button class="btn btn-info my-2 my-sm-0" type="submit">Search</button>
                            </form>
                        </div>
                        <div class="col-sm-4">
                            <a href="{{ path('new_client') }}" class="btn btn-success add"><i
                                        class="material-icons">&#xE147;</i> <span>Add New Client</span></a>
                        </div>
                    </div>
                </div>
                <table class="table table-striped table-hover">
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Address</th>
                        <th>Phone</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for client in paginator.pools %}
                        <tr>
                            <td>{{ client.id }}</td>
                            <td>{{ client.name }}</td>
                            <td>{{ client.email }}</td>
                            <td>{{ client.address }}</td>
                            <td>{{ client.phone }}</td>
                            <td class="col-2">
                                <a href="{{ path('clients_show', {id: client.id}) }}" class="view"><i
                                            class="material-icons"
                                            data-toggle="tooltip"
                                            title="View">&#xe880;</i></a>
                                <a href="{{ path('clients_edit', {id: client.id}) }}" class="edit"><i
                                            class="material-icons"

                                            title="Edit">&#xE254;</i></a>
                                <a href="{{ path('clients_delete', {id: client.id}) }}" class="delete"><i
                                            class="material-icons"

                                            title="Delete">&#xE872;</i></a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
                <div class="clearfix">
                    <div class="hint-text">Showing <b>{{ paginator.onPageCount }}</b> out of <b>{{ paginator.allItemsCount }}</b> entries</div>
                    <ul class="pagination">
                        <li class="page-item disabled"><a href="{{ path('app_clients', {page: paginator.prevPageNumber }) }}">Previous</a>
                        </li>
                        {% for page in paginator.pages %}
                            <li class="page-item"><a href="{{ path('app_clients', {page: page }) }}"
                                                     class="page-link"> {{ page }} </a></li>
                        {% endfor %}
                        <li class="page-item"><a href="{{ path('app_clients', {page: paginator.nextPageNumber }) }}"
                                                 class="page-link">Next</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
{% endblock %}